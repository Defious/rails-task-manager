<h1> <%= @task.title %> </h1>

<div>
  <%= form_for( @task ) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>

  <div class="field">
    <p>
      Done ? :<%= f.check_box :completed, {:class => "myclass", :style => "mystyle"}, "true", "false" %>
    </p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
